@model ActionCommandGame.UI.Mvc.Areas.Administrator.Models.SavePositiveEventResource
@{
    ViewData["Title"] = $"Update the {Model.Name} game event!";
}


<h2>ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Money"></label>
                <input asp-for="Money" class="form-control"/>
                <span asp-validation-for="Money"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience"></label>
                <input asp-for="Experience" class="form-control"/>
                <span asp-validation-for="Experience"></span>
            </div>
            <div class="form-group">
                <label asp-for="Probability"></label>
                <input asp-for="Probability" class="form-control"/>
                <span asp-validation-for="Probability"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>